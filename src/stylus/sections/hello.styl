.hello
	padding-top 20px
	padding-bottom 20px
	height 100%
	animation animationPopup 2s 1
	&__container,
	&__middle
		width 100%
		height 100%
	&__container
		display table
	&__middle
		display table-cell
		vertical-align middle
		text-align center
	&__box,
	&__info
		display inline-block
	&__box
		padding gap_laptop
		width 280px
		height 280px
		line-height 280px
		text-align left
		color #fff
		background-color #000
		border-radius 50%
	&__info
		text-align center
	&__heading
		margin-bottom 20px
	&__heading
		font-family font_heading
		font-size (30 / 16em)
		line-height 1em
	&__description
		font-weight 300
		font-size (13 / 16em)
		line-height 1.5em
