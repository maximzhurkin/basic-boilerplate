// Remove dotted border links
*:focus
	outline: none

// Disable auto zoom in input on iPhone
input[type="color"],
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="email"],
input[type="month"],
input[type="number"],
input[type="password"],
input[type="search"],
input[type="tel"],
input[type="text"],
input[type="time"],
input[type="url"],
input[type="week"],
select:focus,
textarea
	font-size 16px

// Clear style controls
input[type="text"],
input[type="email"],
input[type="tel"],
input[type="search"],
input[type="submit"],
input[type="number"],
input[type="password"]
textarea, select
	-webkit-appearance none
	-moz-appearance none
	appearance none
select::-ms-expand
	display none

// Remove blue outline in select ie10/ie11
select::-ms-value
	background none
	color #000

// Remove clear button in input[type=search]
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	display none

// Remove plus/minus buttons in input[type=number]
input[type=number]
	-moz-appearance textfield
	&::-webkit-inner-spin-button, &::-webkit-outer-spin-button
		margin 0
		-webkit-appearance none

// Remove blue outline controls iOS
input, textarea, button,
select, label, a
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-webkit-tap-highlight-color transparent

// Dont change font-size in landscape state
html
	-webkit-text-size-adjust 100%
body
	-webkit-font-smoothing antialiased

// Clearfix
.group:before, .group:after
	content ""
	display table
.group:after
	clear both
.group
	zoom 1
