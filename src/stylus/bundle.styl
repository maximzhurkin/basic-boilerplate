@import '../../bower_components/reset-stylus/src/reset-stylus.styl'
@import '../../bower_components/owl.carousel/dist/assets/owl.carousel.css'
// Core
@import './core/config.styl'
@import './core/mixins.styl'
@import './core/reset.styl'
@import './core/animations.styl'
// Main
@import './sections/general.styl'


.hello
	height 100%
	background-color #f5f5f5
	&__container,
	&__middle
		width 100%
		height 100%
	&__container
		display table
	&__middle
		display table-cell
		vertical-align middle
		text-align center
	&__box
		padding gap_laptop
		display inline-block
		width 300px
		text-align left
		background-color #ffffff
		border-radius 10px
	&__icon,
	&__heading
		margin-bottom 24px
	&__heading
		font-family font_heading
		font-size (48 / 16em)
		line-height 1em
	&__description
		font-weight 100
		line-height 1.5em
